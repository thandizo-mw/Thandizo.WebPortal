@using Thandizo.WebPortal.Helpers;
@using Thandizo.WebPortal.Helpers.General;
@using IdentityModel; 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Thandizo Web Portal</title>
    <meta name="description" content="Thandizo Web Portal is a web application for managing the thandizo platform" />
    <meta name="keywords" content="Thandizo, thandizo, covid19mw, covid19, covironavirusmw, covironavirusmalawi, coronavirus, malawi visualization, web app, application" />
    <meta name="author" content="angledimension" />

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/favicon.ico">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    <!-- Toastr Alerts CSS-->
    <link href="~/vendors/bower_components/jquery-toast-plugin/dist/jquery.toast.min.css" rel="stylesheet" type="text/css">

    <!-- Data table CSS -->
    <link href="~/vendors/bower_components/datatables/media/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />

    <!-- Bootstrap Datetimepicker CSS -->
    <link href="~/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" />

    <!-- Custom CSS -->
    <link href="~/css/style.css" rel="stylesheet" type="text/css">

</head>
<body>
    <!--Preloader-->
    <div class="preloader-it">
        <div class="la-anim-1"></div>
    </div>
    <!--/Preloader-->
    <div class="wrapper">

        <!-- Top Menu Items -->
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <a id="toggle_nav_btn" class="toggle-left-nav-btn inline-block mr-20 pull-left" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
            <a asp-action="dashboard" asp-controller="Home"><img class="brand-img-logo pull-left thandizo-logo-top" src="~/img/logo.png" alt="brand" /></a>
            <ul class="nav navbar-right top-nav pull-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle pr-0" data-toggle="dropdown"><span>@AppContextHelper.GetStringValueClaim(Context, JwtClaimTypes.PreferredUserName)</span></a>
                    <ul class="dropdown-menu user-auth-dropdown" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut">

                        <li>
                            <a asp-controller="Home" asp-action="Logout"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <div class="collapse navbar-search-overlap" id="site_navbar_search">
                <form role="search">
                    <div class="form-group mb-0">
                        <div class="input-search">
                            <div class="input-group">
                                <input type="text" id="overlay_search" name="overlay-search" class="form-control pl-30" placeholder="Search">
                                <span class="input-group-addon pr-30">
                                    <a href="javascript:void(0)" class="close-input-overlay" data-target="#site_navbar_search" data-toggle="collapse" aria-label="Close" aria-expanded="true"><i class="fa fa-times"></i></a>
                                </span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </nav>
        <!-- /Top Menu Items -->
        <!-- Left Sidebar Menu -->
        <div class="fixed-sidebar-left">
            <ul class="nav navbar-nav side-nav nicescroll-bar">
                <li>
                    <a href="#"><i class="fa fa-dashboard  mr-10"></i>Dashboard</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="ResponseTeamMembers"><i class="fa fa-user-md  mr-10"></i>Team Members</a>
                </li>
                <li>
                    <a asp-controller="Patients" asp-action="ConfirmPatients"><i class="fa fa-wheelchair mr-10"></i>Confirm Patients</a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-wheelchair mr-10"></i>Patient Daily statuses</a>
                </li>
                <li>
                    <a href="javascript:void(0);" data-toggle="collapse" data-target="#sm_dr"><i class="fa fa-list-alt mr-10"></i>Static Maintenance<span class="pull-right"><i class="fa fa-fw fa-angle-down"></i></span></a>
                    <ul id="sm_dr" class="collapse collapse-level-1">
                        <li>
                            <a asp-action="Index" asp-controller="Regions">Regions</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Countries" >Countries</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Nationalities">Nationalities</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="IdentificationTypes">Identification Types</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="PatientStatuses">Patient Statuses</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="PatientSymptoms">Patient Symptoms</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="DataCenters">Data Centers</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="FacilityTypes">Facility Types</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="TransmissionClassifications">Transmission Classifications</a>
                        </li>
                        <li>
                            <a href="#">Health Care Workers</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="javascript:void(0);" data-toggle="collapse" data-target="#resources_dr"><i class="fa fa-archive mr-10"></i>Resources <span class="pull-right"><i class="fa fa-fw fa-angle-down"></i></span></a>
                    <ul id="resources_dr" class="collapse collapse-level-1">
                        <li>
                            <a href="#">Resources</a>
                        </li>
                        <li>
                            <a href="#">Resource Allocation</a>
                        </li>
                        <li>
                            <a href="#">Health Facility Resources</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="javascript:void(0);" data-toggle="collapse" data-target="#notifications_dr"><i class="fa fa-comment-o mr-10"></i>Notifications <span class="pull-right"><i class="fa fa-fw fa-angle-down"></i></span></a>
                    <ul id="notifications_dr" class="collapse collapse-level-1">
                        <li>
                            <a href="#">WhatsApp</a>
                        </li>
                        <li>
                            <a href="#">SMS</a>
                        </li>
                        <li>
                            <a href="#">USSD</a>
                        </li>
                        <li>
                            <a href="#">Email</a>
                        </li>
                    </ul>
                </li>
                
            </ul>
        </div>
        <!-- /Left Sidebar Menu -->
        <!-- Main Content -->
        <div class="page-wrapper">
            <div class="container-fluid">
                @RenderBody()
                <!-- Footer -->
                <footer class="footer container-fluid pl-30 pr-30">
                    <div class="row">
                        <div class="col-sm-12 text-right">
                            <p>2020 &copy; <a href="http://angledimension.com/" target="_blank">Angle Dimension</a> | <a href="https://thandizo.mw/" target="_blank">Thandizo</a></p>
                        </div>
                    </div>
                </footer>
                <!-- /Footer -->

            </div>
            <!-- /Main Content -->

        </div>
        <!-- /#wrapper -->
    </div>


    <!-- /#wrapper -->
    <!-- JavaScript -->
    <!-- jQuery -->
    <script src="~/vendors/bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/vendors/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Toastr Alert JavaScript-->
    <script src="~/vendors/bower_components/jquery-toast-plugin/dist/jquery.toast.min.js"></script>

    <!-- Data table JavaScript -->
    <script src="~/vendors/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTables-data.js"></script>
    <!-- Slimscroll JavaScript -->
    <script src="~/js/jquery.slimscroll.js"></script>

    <!-- Fancy Dropdown JS -->
    <script src="~/js/dropdown-bootstrap-extended.js"></script>
    <!-- Init JavaScript -->
    <script src="~/js/init.js"></script>

    @if (!string.IsNullOrEmpty(Context.Request.Cookies[AppContextHelper.ToastMessageCookie]) && Context.Request.Cookies[AppContextHelper.ToastMessageTypeCookie].Equals(MessageType.Success.ToString()))
    {

        <script>
            $(document).ready(function () {
                $.toast({
                    heading: 'Task Successful',
                    text: '@Context.Request.Cookies[AppContextHelper.ToastMessageCookie]',
                    position: 'top-right',
                    loaderBg: '#3cb878',
                    icon: 'success',
                    hideAfter: 4500
                });
            });

        </script>

        AppContextHelper.RemoveToastMessage(Context.Response);
    }

    @if (!string.IsNullOrEmpty(Context.Request.Cookies[AppContextHelper.ToastMessageCookie]) && Context.Request.Cookies[AppContextHelper.ToastMessageTypeCookie].Equals(MessageType.Danger.ToString()))
    {

        <script>
            $(document).ready(function () {

                $.toast({
                    heading: 'Task Failed',
                    text: '@Context.Request.Cookies[AppContextHelper.ToastMessageCookie]',
                    position: 'top-right',
                    loaderBg:'#3cb878',
                    icon: 'error',
                    hideAfter: 4500
                });
            });

        </script>

        AppContextHelper.RemoveToastMessage(Context.Response);
    }

    @RenderSection("scripts", false)

</body>
</html>
