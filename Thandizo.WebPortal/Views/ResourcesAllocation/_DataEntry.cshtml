@model Thandizo.DataModels.ViewModels.Resources.ResourceAllocationResponseViewModel


<div class="form-group row">
    <label class="bold-text-600 col-md-3 control-label">Patient Status Name</label>

    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon"></span>
            <input type="text" class="form-control input"
                   asp-for="ResourceAllocationResponse.PatientStatusName" disabled>
        </div>
    </div>
</div>
<div class="form-group row">
    <label class="bold-text-600 col-md-3 control-label">Resource</label>

    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
            <select class="form-control select2-selection" asp-for="ResourceAllocationResponse.ResourceId"
                    asp-items="@(new SelectList(Model.Resources, "ResourceId", "ResourceName"))" required></select>
        </div>
    </div>
</div>
<div class="form-group row">
    <label class="bold-text-600 col-md-3 control-label">Required Quantity</label>

    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
            <input type="text" class="form-control input" placeholder="Enter number"
                   asp-for="ResourceAllocationResponse.RequiredQuantity" required>
        </div>
    </div>
</div>