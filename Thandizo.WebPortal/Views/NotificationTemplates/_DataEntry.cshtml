@model Thandizo.DataModels.Notifications.NotificationTemplateDTO


<div class="form-group row">
    @*@Html.LabelFor(model => model.TemplateName, new { @class = "bold-text-600 txt-dark control-label col-md-3" })*@
    <label class="bold-text-600 txt-dark control-label col-md-3">Reminder Title</label>
    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
            <input type="text" class="form-control input" placeholder="Enter name"
                   asp-for="TemplateName" required>
        </div>
    </div>
</div>

<div class="form-group row">
    @*@Html.LabelFor(model => model.Interval, new { @class = "bold-text-600 txt-dark control-label col-md-3" })*@
    <label class="bold-text-600 txt-dark control-label col-md-3">Send Remider for Every</label>
    <div class="col-md-6">
        <div class="col-md-6 pr-0 pl-0">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
                <input type="text" class="form-control input" placeholder="Enter number"
                       asp-for="Interval" required>
            </div>
        </div>
        <div class="col-md-6 pr-0 pl-0">
            <div class="input-group">
                <select class="form-control input" asp-for="IntervalUnit" required>
                    <option value="M">Minutes</option>
                    <option value="H">Hours</option>
                </select>
            </div>
        </div>
    </div>
</div>

<div class="form-group row">
    @*@Html.LabelFor(model => model.RepeatCount, new { @class = "bold-text-600 txt-dark control-label col-md-3" })*@
    <label class="bold-text-600 txt-dark control-label col-md-3">Amount of times to repeat</label>
    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-repeat"></i></span>
            <input type="text" class="form-control input" placeholder="Enter number"
                   asp-for="RepeatCount" required>
        </div>
    </div>
</div>