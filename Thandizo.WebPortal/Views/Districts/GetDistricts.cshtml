@model IEnumerable<Thandizo.DataModels.Core.DistrictDTO>

<div class="table-responsive">
    <table id="dtDistrictsDataTable" class="tabled dt-dataTableSelect get-district-table table-hover display  pb-10 dt-dataTable">
        <thead>
            <tr>
                <th>District Name</th>
                <th class="table-th-action"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model is null)
            {
                <tr>
                    <td colspan="5">
                        <div class="text-center">No Data Found</div>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DistrictName)</td>
                        <td>
                            <label class="district-code" hidden>@Html.DisplayFor(modelItem => item.DistrictCode)</label>
                            <a href='#' class="select-district btn btn-primary btn-sm">
                                <i class="fa fa-check"></i><span class="with-icon">Select</span>
                            </a>
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $('#dtDistrictsDataTable').DataTable({
            scrollY: '350px',
            scrollCollapse: true,
            paging: false,
            "ordering": false,
        });

        $("#dtDistrictsDataTable").on("click", ".select-district", function () {
            var districtName = $(this).parents('tr').find("td:eq(0)").text();
            var districtCode = $(this).parents('tr').find(".district-code").text();
            console.log("loantype" + districtName)
            $("#txtDistrictName").val(districtName);
            $("#txtDistrictCode").val(districtCode);
            $('#searchDistrictsModal').modal('hide');
        });
    });
</script>