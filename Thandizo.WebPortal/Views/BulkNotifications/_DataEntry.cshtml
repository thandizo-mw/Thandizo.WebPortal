@model Thandizo.DataModels.ViewModels.Notifications.BulkNotificationViewModel


<div class="form-group row">
    @Html.LabelFor(model => model.BulkNotification.Message, new { @class = "bold-text-600 txt-dark control-label col-md-3" })

    <div class="col-md-6">
        <textarea class="form-control" placeholder="Enter Message"
                  asp-for="BulkNotification.Message" required></textarea>
    </div>
</div>

<div class="form-group row">
    @Html.LabelFor(model => model.BulkNotification.ChannelId, new { @class = "bold-text-600 txt-dark control-label col-md-3" })

    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-arrow-down"></i></span>
            <select type="text" class="form-control input" asp-for="BulkNotification.ChannelId"
                    asp-items="@(new SelectList(Model.Channels, "ChannelId", "ChannelName"))"></select>
        </div>
    </div>
</div>

<div class="form-group row">
    <label class="bold-text-600 col-md-3 control-label"></label>
    <div class="col-md-6">
        <div class="input-group">
            <div class="checkbox checkbox-primary">
                <input type="checkbox" id="chckSendNow">
                <label for="chckSendNow">
                    Send Immediatly
                </label>
                <input type="hidden" asp-for="SendNow" id="txtSendNow" />
            </div>
        </div>
    </div>
</div>

<div class="form-group row">
    @Html.LabelFor(model => model.BulkNotification.SendDate, new { @class = "bold-text-600 txt-dark control-label col-md-3" })

    <div class="col-md-6">
        <div class='input-group date' id='sendDatePicker'>
            <input type='text' id="txtSendDatePicker" asp-for="BulkNotification.SendDate" 
                   value="@Model.BulkNotification.SendDate.ToString("dd-MMM-yyyy h:mm A")" class="form-control" />
            <span class="input-group-addon">
                <span class="fa fa-calendar"></span>
            </span>
        </div>
    </div>
</div>
