@model Thandizo.DataModels.ViewModels.DataCenters.DataCenterResponseViewModel


<div class="form-group row">
    <label class="bold-text-600 col-md-3 control-label">Center Name</label>

    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
            <input type="text" class="form-control input" placeholder="Enter name"
                   asp-for="DataCenterResponse.CenterName" required>
        </div>
    </div>
</div>
<div class="form-group row">
    <label class="bold-text-600 col-md-3 control-label">Distrcit</label>

    <div class="col-md-6">
        <div class="input-group">
            <input type="text" class="form-control" id="txtDistrictName" asp-for="DataCenterResponse.DistrictName" required
                   placeholder="District" readonly />
            <div class="input-group-btn">
                <button type="button" class="btn btn-default" id="btnSelectDistrict">
                    <i class="fa fa-search"></i><span>Select</span>
                </button>
            </div>
        </div>
    </div>
    <input type="hidden" id="txtDistrictCode" asp-for="DataCenterResponse.DistrictCode" />
</div>
<div class="form-group row">
    <label class="bold-text-600 col-md-3 control-label">Facility Type</label>

    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-arrow-down"></i></span>
            <select class="form-control input" asp-for="DataCenterResponse.FacilityTypeId"
                    asp-items="@(new SelectList(Model.FacilityTypes, "FacilityTypeId", "FacilityTypeName") )" required></select>
        </div>
    </div>
</div>
<div class="form-group row">
    <label class="bold-text-600 col-md-3 control-label"></label>

    <div class="col-md-6">
        <div class="input-group">
            <div class="checkbox checkbox-primary">
                <input type="checkbox" id="chckIsHealthFacility">
                <label for="chckIsHealthFacility">
                    Is Health Facility
                </label>
                <input type="hidden" asp-for="DataCenterResponse.IsHealthFacility" id="txtIsHealthFacility" />
            </div>
        </div>
    </div>
</div>

<div id="searchDistrictsModal" class="modal fade" role="dialog"
     aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Select District</h4>
            </div>
            <div class="modal-body">
                <div id="divsearchDictrictError"></div>
                <div id="divRetrievedDistricts"></div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-md-6">
                        <div id="divProcessDistricts">
                            <div class="processing-horizontal text-info text-left">
                                <i class="fa fa-spin fa-circle-o-notch"></i><span class="with-icon">Processing</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="btn-group" role="group" aria-label="...">
                            <button type="button" class="btn btn-warning btn-sm" id="btnRefreshDistricts">
                                <i class="fa fa-refresh"></i><span class="with-icon">Refresh</span>
                            </button>
                            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" id="Cancel">
                                <i class="fa fa-times"></i><span class="with-icon">Cancel</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>