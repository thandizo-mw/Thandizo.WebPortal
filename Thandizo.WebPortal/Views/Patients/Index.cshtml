@model IEnumerable<Thandizo.DataModels.Patients.PatientDTO>
<div class="row heading-bg  bg-thandizo-green">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h5 class="txt-light">Patient List</h5>
    </div>
    <!-- Breadcrumb -->
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li><a asp-action="Dashboard" asp-controller="Home">Dashboard</a></li>
            <li><a href="#"><span>Patients</span></a></li>
            <li><a class="active"><span>Patient List</span></a></li>
        </ol>
    </div>
    <!-- /Breadcrumb -->
</div>
<!-- /Title -->
<!-- Row -->
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">Patient List</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="table-wrap">
                        <div class="table-responsive">
                            <table id="datable_1" class="table table-hover display  pb-30">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>Age</th>
                                        <th>Phone Number</th>
                                        <th>ID Type</th>
                                        <th>ID</th>
                                        <th>Status</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model is null)
                                    {
                                        <tr>
                                            <td colspan="5">
                                                <div class="text-center">No Data Found</div>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.OtherNames) @Html.DisplayFor(modelItem => item.LastName) </td>
                                                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                                <td>@Html.DisplayFor(modelItem => item.IdentificationTypeId)</td>
                                                <td>@Html.DisplayFor(modelItem => item.IdentificationNumber)</td>
                                                <td>@Html.DisplayFor(modelItem => item.PatientStatusId)</td>
                                                <td>
                                                    <a asp-action="Details" asp-route-pid="@item.PatientId">
                                                        <i class="fa fa-search"></i><span class="help">View</span>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a asp-action="ConfirmPatient" asp-route-pid="@item.PatientId" data-toggle="tooltip" title="Confirm Patient">
                                                        <i class="fa fa-check-circle"></i><span class="help"></span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Row -->
